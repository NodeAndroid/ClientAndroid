<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_title_edit"
            android:hint=" 活动主题"
            android:gravity="left|top" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_introduce"
            android:hint=" 活动介绍"
            android:minLines="5"
            android:gravity="top|left"
            android:layout_marginTop="@dimen/initiate_padding_top" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/division" />

        <LinearLayout
            android:id="@+id/activity_location_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/initiate_padding_top"
            android:paddingBottom="@dimen/initiate_padding_top"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点"
                android:textSize="18sp"
                android:id="@+id/activity_location_txt"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/division" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/initiate_padding_top"
            android:paddingBottom="@dimen/initiate_padding_top"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:id="@+id/activity_time_txt" />
        </LinearLayout>


        <ImageView
            android:id="@+id/activity_picture_choose"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            android:paddingTop="@dimen/initiate_padding_top"
            android:src="@drawable/sea" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/division" />


    </LinearLayout>
</LinearLayout>